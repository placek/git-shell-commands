#!/usr/bin/env sh

reposDir="/var/git"

read -r "are you sure to delete all pipelines and dependencies (y/n)? " choice

case "$choice" in
  y|Y) echo "'yes' selected, processing" ;;
  n|N) echo "'no' selected, exiting" && exit 0 ;;
  *)   echo "invalid option, exiting" && exit 1 ;;
esac

rm -rf $reposDir/pipelines/*
docker system prune --all --volumes --force

echo "pipeline is now fresh"
